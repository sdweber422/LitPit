extends layout

block content


    div.wrapper
      div.flex-container-one
        div.box.one
          img.header(src= '../images/lplogo.png')


        div.box.two

            form.navbar-form.navbar-left(role='search')
            .form-group
              input.form-control.search-box(type='text', placeholder='Search')

        div.box.three
           button.btn.btn-default(type='submit') Submit

      nav.navbar.navbar-default
        .container-fluid
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          // Collect the nav links, forms, and other content for toggling
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='#')
                  | HOME
                  span.sr-only (current)


              li
                a(href='#myModal' data-toggle='modal', data-target='#myModal') ADD BOOKS TO LIBRARY
                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                    | BOOKS BY SUBJECT
                    span.caret
                  ul.dropdown-menu
                    li
                      a(href='#') ALGORITHMS
                    li
                      a(href='#') ANGULAR JS
                    li
                      a(href='#') C++
                    li
                      a(href='#') C#
                    li
                      a(href='#') CSS
                    li
                      a(href='#') COFFEESCRIPT
                    li
                      a(href='#') HTML
                    li
                      a(href='#') JAVA
                    li
                      a(href='#') JAVASCRIPT
                    li
                      a(href='#') JQUERY
                    li
                      a(href='#') MONGO DB
                    li
                      a(href='#') NODE
                    li
                      a(href='#') PHP
              form.navbar-form.navbar-left



        // Modal
        #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') Ã—
              form.modal-body( method="post", action="/addBook" )

                fieldset


                  .control-group
                    // title
                    label.control-label(for='title') Book Title
                    .controls
                      input#title.input-xlarge(type='text', name='Title', placeholder='')
                      p.help-block  Add the name of books or ebooks here
                  .control-group
                    // Image-URL
                    label.control-label(for='Image URL') Image URL
                    .controls
                      input#image-url.input-xlarge(type='text', name='Email', placeholder='')
                      p.help-block Enter an Image URL for your book or ebook
                  .control-group
                    // Description
                    label.control-label(for='description') Enter a description for your book
                    .controls
                      .form-group
                        textarea.form-control(placeholder='Book Description or Excerpt')

                    label Add a Section for your book
                    br
                    select
                      option(value='AL') ALGORITHMS
                      option(value='AK') ANGULAR JS
                      option(value='AZ') C++
                      option(value='AR') C#
                      option(value='CA') CSS
                      option(value='CO') COFFEESCRIPT
                      option(value='CT') HTML
                      option(value='DE') JAVA
                      option(value='DC') JAVASCRIPT
                      option(value='FL') JQUERY
                      option(value='GA') MONGO DB
                      option(value='HI') NODE
                      option(value='ID') Idaho
                      option(value='IL') Illinois
                      option(value='IN') Indiana
                      option(value='IA') Iowa
                      option(value='KS') Kansas
                      option(value='KY') Kentucky
                      option(value='LA') Louisiana

                    .modal-footer
                      button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                      button.btn.btn-primary(type='submit') Save changes

        img.header(src='/images/header.jpeg')

      .flex-container-two
        div.lower-box.a
          img.small(src='/images/algorithms.png')
          img.small(src='/images/angularJS.png')
          img.small(src='/images/coffeescript.png')
          img.small(src='/images/csharp.png')


        div.lower-box.b
          img.small(src='/images/html5.png')
          img.small(src='/images/java.png')
          img.small(src='/images/javascript.png')
          img.small(src='/images/jquery.png')

        div.lower-box.c
          img.small(src='/images/mongodb.png')
          img.small(src='/images/nodejs.png')
          img.small(src='/images/php.png')
          img.small(src='/images/postgresSQL.jpg')
          img.small(src='/images/python.jpg')
